<GridScreenView>:

    StackLayout:
        size_hint: 1, 1
        padding: dp(16)

        CBoxLayout:
            adaptive: [False, True]

            CButtonGhost:
                icon: "arrow--left"
                on_press:
                    app.manager_screens.current = "home screen"

        CGridLayout:
            responsive: True
            min_cols: 2
            cols: 2 # default number of columns on start
            max_cols: 4
            scale_width: dp(200)
            adaptive: [False, True]
            spacing: dp(8)

            CBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: dp(200)
                bg_color: app.interactive

            CBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: dp(200)
                bg_color: app.interactive

            CBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: dp(200)
                bg_color: app.interactive

            CBoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: dp(200)
                bg_color: app.interactive

